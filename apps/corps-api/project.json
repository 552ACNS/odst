{
  "name": "corps-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/corps-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/corps-api",
        "main": "apps/corps-api/src/main.ts",
        "tsConfig": "apps/corps-api/tsconfig.app.json",
        "assets": ["apps/corps-api/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/corps-api/src/environments/environment.ts",
              "with": "apps/corps-api/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "corps-api:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "corps-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/corps-api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/corps-api/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx prisma generate --schema=apps/corps-api/schema.prisma"
      }
    },
    "prisma-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx env-cmd -f apps/corps-api/.env.local npx prisma db push --accept-data-loss --force-reset --schema=apps/corps-api/schema.prisma",
          "npx env-cmd -f apps/corps-api/.env.local yarn ts-node ./apps/corps-api/prisma-seed.ts --schema=apps/corps-api/schema.prisma"
        ],
        "parallel": false
      },
      "configurations": {
        "test": {
          "command": "npx env-cmd -f apps/corps-api/.env.test npx prisma db push --accept-data-loss"
        },
        "migrate": {
          "command": "npx env-cmd -f apps/corps-api/.env.local prisma migrate dev"
        }
      }
    },
    "prisma-studio": {
      "executor": "nx:run-commands",
      "options": {
        "command": "env-cmd -f apps/corps-api/.env.local npx prisma studio --schema=apps/corps-api/schema.prisma"
      }
    },
    "dbdocs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx dbdocs build ./apps/corps-api/schema.dbml --password \"$NX_DBDOCS_PASSWORD\""
      }
    }
  },
  "tags": []
}
